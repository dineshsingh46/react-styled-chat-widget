{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": "src/lib",
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "declaration": true,
  },
  "include": ["src/lib", "images-declarations.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}